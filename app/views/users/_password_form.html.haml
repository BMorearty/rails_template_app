= form_for @user do |f|
  = hidden_field_tag :edit_password, true
  = render partial: 'shared/form_errors', locals: { model: @user, model_name: "user's password" }
  = render partial: 'password_fields', locals: { f: f }
  .actions
    = f.submit t("helpers.links.change_password")
    = link_to t("helpers.links.cancel"), edit_user_path(@user)
